<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

>

  <ImageView
      android:id="@+id/img"
      android:layout_width="110dp"
      android:layout_height="87dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="50dp"
      android:src="@drawable/logo_png" />
    <TextView

        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/usrName"
        android:textSize="20sp"
        android:layout_below="@id/img"
        android:id="@+id/usrtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"/>

    <EditText
        android:layout_marginTop="10dp"
android:background="@drawable/round_bg"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/usrName"
        android:layout_below="@id/usrtxt"
       />
    <TextView

        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/usrName"
        android:textSize="20sp"
        android:layout_below="@id/usrName"
        android:id="@+id/txtusremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"/>
    <EditText

        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtusremail"
        android:id="@+id/usrpassword"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"

        />
<CheckBox
    android:layout_alignLeft="@id/txtusremail"
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/check"
    android:checked="true"
    android:text="Remember me"
    android:layout_below="@id/usrpassword"
    app:buttonTint="@color/colorAccent1"
    />

    <Button

android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="#FA7808"
        android:id="@+id/btn"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/check"/>
</RelativeLayout>